<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.notebook.pos" >

    <uses-sdk tools:node="replace" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.notebook.pos.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.notebook.pos.AddItem"
            android:label="@string/title_activity_add_item"
            android:parentActivityName="com.notebook.pos.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.notebook.pos.MainActivity" />
        </activity>
        <activity
            android:name="com.notebook.pos.AddCustomer"
            android:label="@string/title_activity_add_customer"
            android:parentActivityName="com.notebook.pos.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.notebook.pos.MainActivity" />
        </activity>
    </application>

</manifest>
